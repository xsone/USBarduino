<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:textAllCaps="true"
    android:background="@color/white"
    android:keepScreenOn="true">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:background="@color/white"
        android:id="@+id/graph" />

	<Button
		android:id="@+id/buttonBreakfast"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/darkorange"
		android:onClick="onClickBreakfast"
		android:text="Breakfast"
		android:textColor="@color/white"
		android:textStyle="bold" />

	  <Button
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:text="Lunch"
          android:textStyle="bold"
     	  android:textColor="@color/white"
		  android:background="@color/darkgreen"
		  android:id="@+id/buttonLunch"
		  android:onClick="onClickLunch"/>

	  <Button
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:text="Diner"
          android:textStyle="bold"
		  android:textColor="@color/white"
		  android:background="@color/darkred"
		  android:id="@+id/buttonDiner"
		  android:onClick="onClickDiner"/>

	  <Button
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:text="Inbetween"
          android:textStyle="bold"
		  android:textColor="@color/white"
		  android:background="@color/darkblue"
		  android:id="@+id/buttonInbetween"
		  android:onClick="onClickInbetween"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Serial Start"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/red"
        android:id="@+id/buttonStart"
        android:onClick="onClickStart"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Serial Stop"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/green"
        android:id="@+id/buttonStop"
        android:onClick="onClickStop"/>

    <ScrollView
		android:id="@+id/SCROLLER_ID"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scrollbarSize="50dip"
		android:fadeScrollbars="false"
		android:scrollbars="vertical"
		android:transcriptMode="alwaysScroll"
		android:background="@color/black"
		android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

 </LinearLayout>
